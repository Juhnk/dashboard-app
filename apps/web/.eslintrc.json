{
  "root": true,
  "extends": ["@mustache/eslint-config/next", "plugin:storybook/recommended"],
  "rules": {
    // Project-specific rule overrides
    "@next/next/no-html-link-for-pages": "off",
    "@next/next/no-page-custom-font": "off",
    "import/no-anonymous-default-export": "off",
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "out",
    "public",
    "storybook-static",
    "*.config.js",
    "*.config.ts",
    "generated",
    "prisma/migrations"
  ]
}
